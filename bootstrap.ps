Write-Output "Create C:\hacker"
$path = "C:\hacker"
If(!(test-path $path))
{
      New-Item -ItemType Directory -Force -Path $path
}

Write-Output "cd $path"
Set-Location -Path $path

# =====================================================================
# Keyboard Swiss
# =====================================================================
Write-Output "Setup Keyboard to Swiss"
Set-WinUserLanguageList -LanguageList de-ch -Force

