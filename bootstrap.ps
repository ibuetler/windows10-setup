# =====================================================================
# Windows 10 Setup
# =====================================================================
Write-Output "Create C:\hacker1"
$path = "C:\hacker1"
If(!(test-path $path))
{
      New-Item -ItemType Directory -Force -Path $path
}

Write-Output "cd $path"
Set-Location -Path $path

# =====================================================================
# Keyboard Swiss
# =====================================================================
Write-Output "Setup Keyboard to Swiss"
Set-WinUserLanguageList -LanguageList de-ch -Force

# =====================================================================
# Chocolaty
# =====================================================================
Write-Output "Invoke Chocolaty Installer"
Set-ExecutionPolicy Bypass -Scope Process -Force; [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor 3072; iex ((New-Object System.Net.WebClient).DownloadString('https://chocolatey.org/install.ps1'))

# =====================================================================
# Installation Google Chrome, Firefox, VisualStudio Code 
# =====================================================================
choco install googlechrome firefox visualstudiocode -y

